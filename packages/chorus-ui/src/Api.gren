-}
startHandoff :
    String
    -> { agentName : String, prompt : String }
    -> (Result Http.Error Task -> msg)
    -> Cmd msg
startHandoff tid params toMsg =
    Http.post
        { url = "/api/tasks/" ++ tid ++ "/handoff"
        , body =
            Http.jsonBody
                (Encode.object
                    [ { key = "agentName", value = Encode.string params.agentName }
                    , { key = "prompt", value = Encode.string params.prompt }
                    ]
                )
        , expect = Http.expectJson toMsg (dataDecoder Types.taskDecoder)
        }


