      "input": {
        "tool": "help"
      },
      "expect": {
        "status": "success",
        "output_contains": {
          "tools": "\"required\""
        }
      }
    },
    {
      "name": "Help includes output section for each tool",
      "input": {
        "tool": "help"
      },
      "expect": {
        "status": "success",
        "output_contains": {
