    {
      "name": "Help ignores extra fields in request",
      "input": {
        "tool": "help",
        "extra": "ignored"
      },
      "expect": {
        "status": "success",
        "output_contains": {
          "tools": "file.read"
        }
      }
    },
    {
      "name": "Unknown tool error mentions help",
      "input": {
        "tool": "nonexistent"
      },
      "expect": {
        "status": "error",
        "error_contains": "help"
      }
    }
