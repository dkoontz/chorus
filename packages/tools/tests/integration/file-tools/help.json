{
  "name": "help",
  "scenarios": [
    {
      "name": "Help returns tools array with file.read",
      "input": {
        "tool": "help"
      },
      "expect": {
        "status": "success",
        "output_contains": {
          "tools": "file.read"
        }
      }
    },
    {
      "name": "Help includes file.write tool",
      "input": {
        "tool": "help"
      },
      "expect": {
        "status": "success",
        "output_contains": {
          "tools": "file.write"
        }
      }
    },
    {
      "name": "Help includes file.patch tool",
      "input": {
        "tool": "help"
      },
      "expect": {
        "status": "success",
        "output_contains": {
