{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/source-env.sh"
          }
        ]
      }
    ]
  },
  "permissions": {
    "allow": [
      "Bash(cd *)",
      "Bash(npm run build:*)",
      "Bash(npm run build:tools:*)",
      "Bash(npm run test:*)",
      "Bash(npm run clean *)",
      "Bash(npm run start)",
      "Bash(npm run stop)",
      "Bash(npm run restart)",
      "Bash(npm run status)",
      "Bash(npm run logs *)",
      "Bash(npm run logs:*)",
      "Bash(npm run curl-api *)",
      "Bash(npm test)",
      "Bash(npm install)",
      "Bash(gren *)",
      "Bash(jq *)",
      "Bash(ls *)",
      "Bash(fd *)",
      "Bash(pgrep *)",
      "Bash(pkill *)",
      "Bash(tree *)",
      "Bash(rg *)",
      "Bash(echo *)",
      "Bash(env *)",
      "Bash(pwd)",
      "Bash(xxd *)",
      "Bash(test *)",
      "Bash(gh search *)",
      "Bash(git *)",
      "Bash(ps *)",
      "Bash(*build/tools/*)",
      "Read(**)",
      "Glob(**)",
      "WebFetch(domain:gren-lang.org)",
      "WebFetch(domain:packages.gren-lang.org)",
      "WebFetch(domain:github.com)",
      "WebFetch(domain:raw.githubusercontent.com)",
      "WebFetch(domain:www.npmjs.com)",
      "WebSearch"
    ],
    "deny": [
      "Bash(*scripts/agent/*)",
      "Bash(find *)",
      "Bash(grep *)",
      "Bash(python *)"
    ]
  }
}
