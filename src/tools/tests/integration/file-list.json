{
  "name": "file.list",
  "scenarios": [
    {
      "name": "List files in workspace root",
      "setup": {
        "files": {
          "file1.txt": "content1",
          "file2.txt": "content2"
        }
      },
      "input": {
        "tool": "file.list"
      },
      "expect": {
        "status": "success",
        "output_contains": {
          "files": "file1.txt"
        }
      }
    },
    {
      "name": "List files with pattern",
      "setup": {
        "files": {
          "app.js": "js content",
          "app.ts": "ts content",
          "readme.md": "docs"
        }
      },
      "input": {
        "tool": "file.list",
        "pattern": "*.js"
      },
      "expect": {
        "status": "success",
        "output_contains": {
          "files": "app.js"
        }
      }
    }
  ]
}
