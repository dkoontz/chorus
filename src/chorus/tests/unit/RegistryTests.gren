testSourceInfoEncodeDecode : { name : String, run : Task.Task String {} }
testSourceInfoEncodeDecode =
    { name = "SourceInfo with conversationId encodes and decodes"
    , run =
        let
            task =
                DescriptionOnly
                    { id = "test"
                    , description = "Test"
                    , status = Pending
                    , createdAt = Time.millisToPosix 0
                    , updatedAt = Time.millisToPosix 0
                    , sessionId = Just "session-123"
                    , source =
                        { sourceType = "xmpp"
                        , userId = "user@example.com"
                        , conversationId = Just "thread-456"
                        }
                    , agentWorkspace = "/tmp"
                    , attachments = []
                    }

            encoded =
                Registry.encodeTask task

            json =
                Encode.encode 0 encoded

            decoded =
                Decode.decodeString Registry.taskDecoder json
        in
        when decoded is
            Ok decodedTask ->
                if Registry.taskSessionId decodedTask == Just "session-123" && (Registry.taskSource decodedTask).conversationId == Just "thread-456" then
                    Task.succeed {}
                else
                    Task.fail "sessionId or conversationId mismatch"

            Err err ->
                Task.fail ("Decode failed: " ++ Decode.errorToString err)
    }


testAttachmentRoundTrip : { name : String, run : Task.Task String {} }
testAttachmentRoundTrip =
    { name = "Task with attachments encodes and decodes correctly"
    , run =
        let
            attachment1 =
                { filename = "readme.md"
                , size = 1024
                , contentType = "text/markdown"
                , uploadedAt = Time.millisToPosix 1707048700000
                }

            attachment2 =
                { filename = "data.csv"
                , size = 2048
                , contentType = "text/csv"
                , uploadedAt = Time.millisToPosix 1707048800000
                }

            task =
                DescriptionOnly
                    { id = "test-attach"
                    , description = "Task with attachments"
                    , status = Pending
                    , createdAt = Time.millisToPosix 1707048600000
                    , updatedAt = Time.millisToPosix 1707048600000
                    , sessionId = Nothing
                    , source =
                        { sourceType = "terminal"
                        , userId = "testuser"
                        , conversationId = Nothing
                        }
                    , agentWorkspace = "/tmp/workspace"
                    , attachments = [ attachment1, attachment2 ]
                    }

            encoded =
                Registry.encodeTask task

            json =
                Encode.encode 0 encoded

            decoded =
                Decode.decodeString Registry.taskDecoder json
        in
        when decoded is
            Ok decodedTask ->
                let
                    decodedAttachments =
                        Registry.taskAttachments decodedTask
                in
                expectEqual 2 (Array.length decodedAttachments)
                    |> Task.andThen
                        (\_ ->
                            when Array.first decodedAttachments is
                                Just a ->
                                    expectEqual "readme.md" a.filename
                                        |> Task.andThen (\_ -> expectEqual 1024 a.size)
                                        |> Task.andThen (\_ -> expectEqual "text/markdown" a.contentType)
                                        |> Task.andThen (\_ -> expectEqual (Time.millisToPosix 1707048700000) a.uploadedAt)

                                Nothing ->
                                    Task.fail "First attachment was Nothing"
                        )
                    |> Task.andThen
                        (\_ ->
                            when Array.get 1 decodedAttachments is
                                Just a ->
                                    expectEqual "data.csv" a.filename
                                        |> Task.andThen (\_ -> expectEqual 2048 a.size)
                                        |> Task.andThen (\_ -> expectEqual "text/csv" a.contentType)
                                        |> Task.andThen (\_ -> expectEqual (Time.millisToPosix 1707048800000) a.uploadedAt)

                                Nothing ->
                                    Task.fail "Second attachment was Nothing"
                        )

            Err err ->
                Task.fail ("Decode failed: " ++ Decode.errorToString err)
    }


testBackwardCompatMissingAttachments : { name : String, run : Task.Task String {} }
testBackwardCompatMissingAttachments =
    { name = "Task JSON without attachments field decodes with empty array"
    , run =
        let
            -- Manually constructed JSON without the "attachments" key
            json =
                "{\"id\":\"old-task\",\"description\":\"Legacy task\",\"status\":{\"type\":\"pending\"},\"createdAt\":1707048600000,\"updatedAt\":1707048600000,\"sessionId\":null,\"source\":{\"sourceType\":\"test\",\"userId\":\"tester\",\"conversationId\":null},\"agentWorkspace\":\"/tmp\"}"

            decoded =
                Decode.decodeString Registry.taskDecoder json
        in
        when decoded is
            Ok decodedTask ->
                expectEqual "old-task" (Registry.taskId decodedTask)
                    |> Task.andThen (\_ -> expectEqual "Legacy task" (Registry.taskDescription decodedTask))
                    |> Task.andThen (\_ -> expectEqual [] (Registry.taskAttachments decodedTask))
                    |> Task.andThen (\_ -> expectEqual False (Registry.isPlanned decodedTask))

            Err err ->
                Task.fail ("Decode should have succeeded but failed: " ++ Decode.errorToString err)
    }


testMalformedAttachmentMissingField : { name : String, run : Task.Task String {} }
testMalformedAttachmentMissingField =
    { name = "Task with malformed attachment falls back to empty array"
    , run =
        let
            -- Attachment is missing the "contentType" field.
            -- The Decode.oneOf in taskDecoder falls back to [] when
            -- the attachments array fails to decode.
            json =
                "{\"id\":\"bad-task\",\"description\":\"Bad\",\"status\":{\"type\":\"pending\"},\"createdAt\":0,\"updatedAt\":0,\"sessionId\":null,\"source\":{\"sourceType\":\"test\",\"userId\":\"test\",\"conversationId\":null},\"agentWorkspace\":\"/tmp\",\"attachments\":[{\"filename\":\"f.txt\",\"size\":100,\"uploadedAt\":0}]}"

            decoded =
                Decode.decodeString Registry.taskDecoder json
        in
        when decoded is
            Ok decodedTask ->
                expectEqual "bad-task" (Registry.taskId decodedTask)
                    |> Task.andThen (\_ -> expectEqual [] (Registry.taskAttachments decodedTask))

            Err err ->
                Task.fail ("Decode failed unexpectedly: " ++ Decode.errorToString err)
    }


