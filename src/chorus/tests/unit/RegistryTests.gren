testTaskDecodeBackwardCompatibility : { name : String, run : Task.Task String {} }
testTaskDecodeBackwardCompatibility =
    { name = "Task JSON without planning fields decodes as DescriptionOnly"
    , run =
        let
            -- JSON that omits summary, requirements, acceptanceCriteria, plan, and taskType fields
            json =
                "{\"id\":\"legacy-task\",\"description\":\"Old task\",\"status\":{\"type\":\"pending\"},\"createdAt\":1707048600000,\"updatedAt\":1707048600000,\"sessionId\":null,\"source\":{\"sourceType\":\"test\",\"userId\":\"tester\",\"conversationId\":null},\"agentWorkspace\":\"/tmp\",\"attachments\":[]}"

            decoded =
                Decode.decodeString Registry.taskDecoder json
        in
        when decoded is
            Ok decodedTask ->
                expectEqual "legacy-task" (Registry.taskId decodedTask)
                    |> Task.andThen (\_ -> expectEqual False (Registry.isPlanned decodedTask))

            Err err ->
                Task.fail ("Decode should have succeeded but failed: " ++ Decode.errorToString err)
    }


testTaskDecodeBackwardCompatWithPlanningFields : { name : String, run : Task.Task String {} }
testTaskDecodeBackwardCompatWithPlanningFields =
    { name = "Legacy task JSON with planning fields decodes as Planned"
    , run =
        let
            -- JSON without taskType but with planning fields present
            json =
                "{\"id\":\"legacy-planned\",\"description\":\"Old planned task\",\"status\":{\"type\":\"pending\"},\"createdAt\":1707048600000,\"updatedAt\":1707048600000,\"sessionId\":null,\"source\":{\"sourceType\":\"test\",\"userId\":\"tester\",\"conversationId\":null},\"agentWorkspace\":\"/tmp\",\"attachments\":[],\"summary\":\"My summary\",\"requirements\":[\"req1\"],\"acceptanceCriteria\":[],\"plan\":[]}"

            decoded =
                Decode.decodeString Registry.taskDecoder json
        in
        when decoded is
            Ok decodedTask ->
                expectEqual "legacy-planned" (Registry.taskId decodedTask)
                    |> Task.andThen (\_ -> expectEqual True (Registry.isPlanned decodedTask))
                    |> Task.andThen
                        (\_ ->
                            when decodedTask is
                                Planned t ->
                                    expectEqual "My summary" t.summary
                                        |> Task.andThen (\_ -> expectEqual [ "req1" ] t.requirements)

                                DescriptionOnly _ ->
                                    Task.fail "Expected Planned but got DescriptionOnly"
                        )

            Err err ->
                Task.fail ("Decode should have succeeded but failed: " ++ Decode.errorToString err)
    }


